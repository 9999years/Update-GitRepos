digraph programflow {
	commit -> custom_pathspec [label="Yes"];
	custom_pathspec -> { use_dot [label="No"]; input_pathspec [label="Yes"]; };

	commit -> quit [label="No"];

	{ use_dot; input_pathspec; } -> git_add;

	git_add -> commit_length -> git_commit [label="Long"] -> done;
	commit_length -> input_message [label="Short"] -> message_exit
	message_exit -> { git_commit_m [label="No"] -> done; quit [label="Yes"]}

	quit [label="Quit"];
	done [label="Done"];
	commit [label="Commit?"];
	custom_pathspec [label="Add files: Custom pathspec?"];
	use_dot [label="Use `.`"];
	input_pathspec [label="Input pathspec"];
	git_add [label="`git add $Path`"];
	git_commit [label="`git commit`"];
	git_commit_m [label="`git commit -m $Message`"];
	commit_length [label="Long or short commit message?"]
	input_message [label="Input commit message"]
	message_exit [label="Message == \"<<EXIT>>\"?"]
}
